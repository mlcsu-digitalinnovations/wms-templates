@model UserEmailModel
@using NHSEI_WmsGPReferral.CustomClasses

@{
    ViewData["Title"] = "What is your email address?";
    bool hasErrors = false;
    if (ViewData.ModelState.ErrorCount > 0)
    {
        hasErrors = true;
    }
}
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">

        <div class="nhsuk-back-link">
            <a class="nhsuk-back-link__link" asp-controller="OrganisationInfo" asp-action="Index">
                <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                </svg>
                Go back
            </a>
        </div>

        <div class="nhsuk-card wms-card">
            <div class="nhsuk-card__content">
                <form method="post">
                    <fieldset class="nhsuk-fieldset nhsuk-u-padding-bottom-6"
                              aria-describedby="user-email-hint">

                        <div class="@NhsFormHelper.GetFormElementClasses("form-group", hasErrors)">
                            <h1 class="nhsuk-label-wrapper">
                                <label class="nhsuk-label nhsuk-label--l" asp-for="UserEmail">
                                </label>
                            </h1>
                            <div class="nhsuk-hint" id="user-email-hint">
                                What is your email address?
                            </div>
                            <span class="nhsuk-error-message" id="input-with-error-message-error">
                                <span class="nhsuk-u-visually-hidden">Error:</span> <span asp-validation-for="UserEmail"></span>
                            </span>
                            <input type="text" class="@NhsFormHelper.GetFormElementClasses("text", hasErrors)" asp-for="UserEmail" />

                        </div>
                    </fieldset>

                    <input type="submit" value="Confirm email address" class="nhsuk-button" />
                </form>
            </div>
        </div>

    </div>
</div>
