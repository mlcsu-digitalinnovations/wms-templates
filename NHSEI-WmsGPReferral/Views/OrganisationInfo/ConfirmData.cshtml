@model ConfirmDataModel
@{
    ViewData["Title"] = "Confirm your data";
}
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">

        <div class="nhsuk-back-link">
            <a class="nhsuk-back-link__link" asp-controller="OrganisationInfo" asp-action="@{ if (Model.ClinicalSystem != "") {@Html.Raw("selectClinicalSystem"); } else { @Html.Raw("UserEmail") } }">
                <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                </svg>
                Go back
            </a>
        </div>

        <div class="nhsuk-card wms-card">
            <div class="nhsuk-card__content">
                <h1 class="nhsuk-card__heading nhsuk-label--l">
                    Confirm your details
                </h1>

                <dl class="nhsuk-summary-list nhsuk-u-padding-bottom-6">
                    <div class="nhsuk-summary-list__row">
                        <dt class="nhsuk-summary-list__key">
                            ODS code
                        </dt>
                        <dd class="nhsuk-summary-list__value">
                            @Model.OdsCode
                        </dd>
                        <dd class="nhsuk-summary-list__actions">
                            <a asp-controller="OrganisationInfo" asp-action="Index">
                                Change <span class="nhsuk-u-visually-hidden">ODS code</span>
                            </a>
                        </dd>
                    </div>

                    <div class="nhsuk-summary-list__row">
                        <dt class="nhsuk-summary-list__key">
                            Organisation name
                        </dt>
                        <dd class="nhsuk-summary-list__value">
                            @Model.Organisation
                        </dd>
                        <dd class="nhsuk-summary-list__actions">
                            <a asp-controller="OrganisationInfo" asp-action="Index">
                                Change <span class="nhsuk-u-visually-hidden">organisation</span>
                            </a>
                        </dd>
                    </div>

                    <div class="nhsuk-summary-list__row">
                        <dt class="nhsuk-summary-list__key">
                            Email address
                        </dt>
                        <dd class="nhsuk-summary-list__value">
                            @Model.Email
                        </dd>
                        <dd class="nhsuk-summary-list__actions">
                            <a asp-controller="OrganisationInfo" asp-action="UserEmail">
                                Change <span class="nhsuk-u-visually-hidden">email address</span>
                            </a>
                        </dd>
                    </div>

                    <div class="nhsuk-summary-list__row @{if (Model.ClinicalSystem == "") {@Html.Raw("display-none")}}">
                        <dt class="nhsuk-summary-list__key">
                            Clinical system
                        </dt>
                        <dd class="nhsuk-summary-list__value">
                            @Model.ClinicalSystem
                        </dd>
                        <dd class="nhsuk-summary-list__actions">
                            <a asp-controller="OrganisationInfo" asp-action="SelectClinicalSystem">
                                Change <span class="nhsuk-u-visually-hidden">clinical system</span>
                            </a>
                        </dd>
                    </div>
                </dl>

                <form method="post">
                    <input type="hidden" value="@Model.OdsCode" asp-for="OdsCode" />
                    <input type="hidden" value="@Model.Organisation" asp-for="Organisation" />
                    <input type="hidden" value="@Model.Email" asp-for="Email" />
                    <input type="hidden" value="@Model.ClinicalSystem" asp-for="ClinicalSystem" />
                    <input type="submit" value="Confirm selections" class="nhsuk-button" />
                </form>
            </div>
        </div>
    </div>
</div>
